<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ControllerSettings">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="660.0" prefWidth="386.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Settings">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <font>
                  <Font size="39.0" />
               </font>
            </Label>
            <MenuButton fx:id="gridSize" mnemonicParsing="false" text="Grid SIze">
              <items>
                <MenuItem mnemonicParsing="false" text="Row">
                     <graphic>
                        <Slider min="3.0" />
                     </graphic></MenuItem>
                <MenuItem mnemonicParsing="false" text="Column">
                     <graphic>
                        <Slider min="3.0" />
                     </graphic></MenuItem>
              </items>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </MenuButton>
            <Button fx:id="apply" mnemonicParsing="false" text="Apply">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="mainMenu" mnemonicParsing="false" onAction="#mainMenu" text="Main Menu">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
